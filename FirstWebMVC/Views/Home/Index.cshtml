@model FirstWebMVC.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Sell it now</h1>
    <hr/>
    @foreach (var product in Model.Products)
    {
        <div class="card" style="width: 18rem;">
            <img src="@product.Image" class="card-img-top" alt="purse-picture">
            <div class="card-body">
                <h5 class="card-title">@product.Title</h5>
                <div>@($"{product.Price:C}")</div>
                <div>Lacina,FL</div>
            </div>
        </div>    
    }
</div>
